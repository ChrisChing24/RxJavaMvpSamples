<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_classroom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/girl"/>

    <TextView
        android:id="@+id/tv_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/iv_classroom"
        android:singleLine="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_seatnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_classroom"
        android:layout_toRightOf="@+id/iv_classroom"
        android:text="坐席:30"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_device"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_classroom"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/tv_seatnum"
        android:singleLine="true"
        android:text="设备:"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tv_classroom"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:text="状态"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"/>



    <ImageView
        android:id="@+id/iv_righticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@mipmap/right_arrow"/>

</RelativeLayout>